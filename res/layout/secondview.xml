<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:background="@drawable/redline"></LinearLayout>
	<TextView android:text="Press for 2 seconds to send your message... " android:id="@+id/textView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="@style/textStyle"
		 ></TextView>


	<ImageButton android:src="@drawable/alert_custom"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:id="@+id/imageButton1" android:background="#000000" android:scaleType="fitCenter"></ImageButton>

</LinearLayout>
